<script>
  const carrusel = document.getElementById("carruselProductos");
  const indicadores = document.getElementById("indicadoresCarrusel");
  const tarjetasPorVista = 4;

  // CÃ¡lculo total de "pÃ¡ginas" basado en el nÃºmero de elementos
  const totalProductos = carrusel.children.length;
  const totalPaginas = Math.ceil(totalProductos / tarjetasPorVista);
  let paginaActual = 0;

  // Crear puntitos
  for (let i = 0; i < totalPaginas; i++) {
    const punto = document.createElement("div");
    punto.className = "w-2 h-2 rounded-full bg-gray-300 cursor-pointer";
    punto.addEventListener("click", () => moverACarrusel(i));
    indicadores.appendChild(punto);
  }

  actualizarIndicadores();

  function moverCarrusel(direccion) {
    paginaActual = Math.max(0, Math.min(totalPaginas - 1, paginaActual + direccion));
    carrusel.scrollTo({
      left: paginaActual * carrusel.offsetWidth,
      behavior: "smooth"
    });
    actualizarIndicadores();
  }

  function moverACarrusel(pagina) {
    paginaActual = pagina;
    carrusel.scrollTo({
      left: pagina * carrusel.offsetWidth,
      behavior: "smooth"
    });
    actualizarIndicadores();
  }

  function actualizarIndicadores() {
    const puntos = indicadores.children;
    for (let i = 0; i < puntos.length; i++) {
      puntos[i].classList.remove("bg-blue-500");
      puntos[i].classList.add("bg-gray-300");
    }
    if (puntos[paginaActual]) {
      puntos[paginaActual].classList.remove("bg-gray-300");
      puntos[paginaActual].classList.add("bg-blue-500");
    }
  }

  // Opcional: sincronizar indicador con scroll manual
  carrusel.addEventListener("scroll", () => {
    const nuevaPagina = Math.round(carrusel.scrollLeft / carrusel.offsetWidth);
    if (nuevaPagina !== paginaActual) {
      paginaActual = nuevaPagina;
      actualizarIndicadores();
    }
  });
</script>

