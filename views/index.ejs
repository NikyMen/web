<script>
  const carrusel = document.getElementById("carruselInner")
  let autoScroll = true
  let currentPosition = 0

  const moverCarrusel = () => {
    if (!autoScroll) return

    const cardWidth = carrusel.firstElementChild.offsetWidth + 16
    const totalWidth = carrusel.scrollWidth
    currentPosition += cardWidth

    if (currentPosition >= totalWidth - carrusel.offsetWidth) {
      currentPosition = 0
      carrusel.style.transition = "none"
    } else {
      carrusel.style.transition = "transform 0.7s ease-in-out"
    }

    carrusel.style.transform = `translateX(-${currentPosition}px)`
  }

  let intervalo = setInterval(moverCarrusel, 3000)

  // Si el usuario hace scroll manual, pausamos y reiniciamos
  let scrollTimeout
  const contenedor = document.querySelector("#carrusel")

  contenedor.addEventListener("scroll", () => {
    autoScroll = false
    clearInterval(intervalo)
    clearTimeout(scrollTimeout)

    scrollTimeout = setTimeout(() => {
      currentPosition = contenedor.scrollLeft
      autoScroll = true
      intervalo = setInterval(moverCarrusel, 3000)
    }, 3000)
  })
</script>

