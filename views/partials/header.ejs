<header class="bg-blue-800 text-white py-1 shadow-md">
  <div class="w-full flex flex-col md:flex-row items-center justify-between gap-6 px-6">

    <!-- Logo -->
    <div class="flex-shrink-0">
      <a href="/" class="flex items-center">
        <img
          src="/img/logo-mendez.png"
          alt="Repuestos Méndez"
          class="max-h-24 w-auto object-contain"
        />
      </a>
    </div>

    <!-- Buscador centrado y expandido -->
    <div class="flex-grow w-full">
      <form action="/productos" method="GET" class="flex w-full max-w-4xl mx-auto">
        <input
          type="text"
          name="buscar"
          placeholder="Buscar cubiertas, repuestos, accesorios..."
          class="flex-1 px-4 py-3 rounded-l-md text-black focus:outline-none text-base"
        />
        <button class="bg-white text-blue-800 px-5 py-3 rounded-r-md font-semibold hover:bg-gray-200 transition">
          🔍 Buscar
        </button>
      </form>
    </div>

    <!-- Menú de navegación -->
    <nav class="flex flex-wrap items-center gap-4 text-lg justify-center md:justify-end w-full md:w-auto mt-4 md:mt-0">

      <a href="#" class="bg-yellow-400 text-blue-900 px-3 py-2 rounded font-semibold hover:bg-yellow-300 transition">
        🔥 Ofertass
      </a>
      <a href="/productos" class="hover:underline font-medium">Catalogo</a>
      <a href="/nosotros" class="hover:underline font-medium">Nosotros</a>
      <a href="/ayuda" class="hover:underline font-medium">Ayuda</a>

      <% if (user && user.username) { %>
        <span class="text-white font-semibold">Hola, <%= user.username %></span>
        <form action="/logout" method="POST">
          <button class="bg-white text-blue-800 px-4 py-2 rounded font-bold hover:bg-gray-200 transition">
            Cerrar sesión
          </button>
        </form>
      <% } else { %>
        <a href="/register" class="bg-white text-blue-800 px-4 py-2 rounded font-bold hover:bg-gray-200 transition">
          Crear cuenta
        </a>
        <a href="/login" class="bg-white text-blue-800 px-4 py-2 rounded font-bold hover:bg-gray-200 transition">
          Ingresar
        </a>
      <% } %>

      <button onclick="window.location.href='/carrito'" id="abrirCarrito"  class="text-white bg-blue-800 px-4 py-2 rounded hover:bg-blue-700">
       🛒 Carrito
       
      </button>

    </nav>

  </div>
</header>
