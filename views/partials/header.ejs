<header class="bg-red-600 text-white py-4 shadow-md">
  <div class="container mx-auto flex flex-col md:flex-row items-center justify-between gap-6 px-4">

    <!-- Logo + Buscador -->
    <div class="flex flex-col md:flex-row items-center gap-4 w-full md:w-auto">
      <h1 class="text-3xl font-extrabold tracking-wide">Repuestos Méndez</h1>

      <form action="/" method="GET" class="flex w-full max-w-lg">
        <input
          type="text"
          name="buscar"
          placeholder="Buscar cubiertas, repuestos, accesorios..."
          class="flex-1 px-4 py-3 rounded-l-md text-black focus:outline-none text-base"
        />
        <button class="bg-white text-red-700 px-5 py-3 rounded-r-md font-semibold hover:bg-gray-200 transition">
          🔍 Buscar
        </button>
      </form>
    </div>

    <!-- Menú de navegación -->
    <nav class="flex flex-wrap items-center gap-4 text-lg justify-center md:justify-end w-full md:w-auto">

      <a href="#" class="hover:underline font-medium">Ofertas</a>
      <a href="#" class="hover:underline font-medium">Categorías</a>
      <a href="#" class="hover:underline font-medium">Vender</a>
      <a href="#" class="hover:underline font-medium">Ayuda</a>

      <% if (user && user.username) { %>
        <span class="text-white font-semibold">Hola, <%= user.username %></span>
        <form action="/logout" method="POST">
          <button class="bg-white text-red-700 px-4 py-2 rounded font-bold hover:bg-gray-200 transition">
            Cerrar sesión
          </button>
        </form>
      <% } else { %>
        <a href="/register" class="bg-white text-red-700 px-4 py-2 rounded font-bold hover:bg-gray-200 transition">
          Crear cuenta
        </a>
        <a href="/login" class="bg-white text-red-700 px-4 py-2 rounded font-bold hover:bg-gray-200 transition">
          Ingresar
        </a>
      <% } %>

      <a href="#" class="text-2xl hover:text-gray-300">🛒</a>
    </nav>

  </div>
</header>
