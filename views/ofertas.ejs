        <p class="text-green-600 font-bold text-lg mb-3">$<%= p.precio.toLocaleString("es-AR") %></p>
        <a href="/productos" class="block text-center bg-blue-800 text-white py-2 rounded hover:bg-blue-700 transition">Consultar</a>
      </div>
    <% }) %>
  </div>
</section>
