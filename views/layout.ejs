<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title><%= typeof title !== 'undefined' ? title : 'Repuestos Méndez' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/favicon.png" type="image/png">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="relative z-0 bg-gray-100 text-gray-800 font-sans"></body>
  <canvas id="fondoAnimado" class="fixed top-0 left-0 w-full h-full -z-10 pointer-events-none opacity-30"></canvas>
  <%- include('partials/header') %>

  <div id="notificacionCarrito" class="fixed top-[4.5rem] left-4 right-4 mx-auto max-w-full sm:max-w-screen-sm bg-green-600 text-white px-4 py-3 rounded shadow-lg z-50 hidden opacity-0 transition-opacity duration-300 text-center text-sm">
    Producto agregado al carrito ✅
  </div>

  <main class="p-4 sm:p-6">
    <%- body %>
  </main>

  <div id="carritoPanel" class="fixed right-0 top-0 h-full w-full max-w-xs sm:max-w-sm bg-white shadow-lg z-50 p-4 transform translate-x-full transition-transform duration-300 overflow-y-auto">
    <div class="flex justify-between items-center mb-4 border-b pb-2">
      <h2 class="text-lg sm:text-xl font-bold">🛒 Tu carrito</h2>
      <button onclick="cerrarCarrito()" class="text-gray-600 text-2xl font-bold">&times;</button>
    </div>
    <div id="carritoContenido" class="space-y-4 text-sm text-gray-800">
      <p>Cargando productos...</p>
    </div>
    <a href="/carrito" class="block mt-4 text-center bg-blue-700 text-white py-2 rounded hover:bg-blue-800">Ir al carrito</a>
  </div>

  <a href="https://wa.me/5493795036085?text=Hola%20quiero%20hacer%20una%20consulta%20sobre%20los%20repuestos"
     target="_blank"
     aria-label="WhatsApp"
     class="fixed bottom-24 right-4 sm:right-6 bg-white rounded-full shadow-lg p-2 z-50 hover:scale-105 transition-transform">
    <img src="https://upload.wikimedia.org/wikipedia/commons/5/5e/WhatsApp_icon.png" alt="WhatsApp" class="w-10 h-10">
  </a>

  <!-- 🔘 Botón flotante del carrito -->



<button onclick="abrirCarrito()"
    class="fixed bottom-6 right-6 bg-white p-3 rounded-full shadow-lg z-50 hover:shadow-xl transition"
    aria-label="Carrito">
    <img src="https://cdn-icons-png.flaticon.com/512/3144/3144456.png" alt="Carrito" class="w-7 h-7">
    <span id="contadorCarrito" class="absolute -top-2 -right-2 bg-red-600 text-white text-xs font-bold w-5 h-5 flex items-center justify-center rounded-full">0</span>
  </button>

  <!-- Scripts -->
  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      // Sincroniza localStorage al cargar la página
      const res = await fetch("/carrito/json");
      const productos = await res.json();
      const carrito = {};
      productos.forEach(p => carrito[p.codigo] = p.cantidad);
      localStorage.setItem("carrito", JSON.stringify(carrito));
      actualizarContadorCarrito();
    });

    document.getElementById("botonCarrito").addEventListener("click", abrirCarrito);

    async function abrirCarrito() {
      const panel = document.getElementById("carritoPanel");
      const contenedor = document.getElementById("carritoContenido");

      if (!panel.classList.contains("translate-x-full")) {
        panel.classList.add("translate-x-full");
        return;
      }

      panel.classList.remove("translate-x-full");

      const res = await fetch("/carrito/json");
      const productos = await res.json();

      if (productos.length === 0) {
        contenedor.innerHTML = "<p class='text-gray-600'>Tu carrito está vacío.</p>";
        return;
      }

      let html = "";
      let total = 0;
      productos.forEach(p => {
        total += p.subtotal;
        html += `
          <div class="border-b pb-2">
            <h3 class="font-semibold">${p.nombre}</h3>
            <p class="text-sm text-gray-500">Código: ${p.codigo}</p>
            <p class="text-sm">Cantidad: ${p.cantidad}</p>
            <p class="text-sm">Subtotal: $${p.subtotal.toLocaleString("es-AR", { minimumFractionDigits: 2 })}</p>
            <button onclick="eliminarProducto('${p.codigo}')" class="mt-1 text-red-600 text-xs hover:underline">Eliminar</button>
          </div>`;
      });

      html += `<p class="mt-4 font-bold text-right">Total: $${total.toLocaleString("es-AR", { minimumFractionDigits: 2 })}</p>`;
      contenedor.innerHTML = html;
    }

    async function eliminarProducto(codigo) {
      await fetch("/api/carrito/eliminar", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ codigo })
      });
      await abrirCarrito();
      mostrarNotificacion("Producto eliminado ❌");
      actualizarContadorCarrito();
    }

    function cerrarCarrito() {
      document.getElementById("carritoPanel").classList.add("translate-x-full");
    }

    function mostrarNotificacion(mensaje = "Producto agregado al carrito ✅") {
      const noti = document.getElementById("notificacionCarrito");
      noti.textContent = mensaje;
      noti.classList.remove("hidden", "opacity-0");
      noti.classList.add("opacity-100");
      setTimeout(() => {
        noti.classList.remove("opacity-100");
        setTimeout(() => noti.classList.add("hidden"), 300);
      }, 2000);
    }

    function actualizarContadorCarrito() {
      const carrito = JSON.parse(localStorage.getItem("carrito")) || {};
      const total = Object.values(carrito).reduce((acc, cantidad) => acc + cantidad, 0);
      const contador = document.getElementById("contadorCarrito");
      if (contador) contador.textContent = total;
    }

    // Fondo básico tipo "niebla de tornillos"
  const canvas = document.getElementById('fondoAnimado');
  const ctx = canvas.getContext('2d');
  let width = canvas.width = window.innerWidth;
  let height = canvas.height = window.innerHeight;

  const tornillos = Array.from({ length: 60 }, () => ({
    x: Math.random() * width,
    y: Math.random() * height,
    r: Math.random() * 1.5 + 1,
    dx: (Math.random() - 0.5) * 0.5,
    dy: (Math.random() - 0.5) * 0.5
  }));

  function animar() {
    ctx.clearRect(0, 0, width, height);
    tornillos.forEach(t => {
      ctx.beginPath();
      ctx.arc(t.x, t.y, t.r, 0, Math.PI * 2);
      ctx.fillStyle = '#6b7280'; // gris
      ctx.fill();

      t.x += t.dx;
      t.y += t.dy;

      if (t.x < 0 || t.x > width) t.dx *= -1;
      if (t.y < 0 || t.y > height) t.dy *= -1;
    });
    requestAnimationFrame(animar);
  }

  animar();
  window.addEventListener('resize', () => {
    width = canvas.width = window.innerWidth;
    height = canvas.height = window.innerHeight;
  });

  </script>
</body>
</html>
