

<h2 class="text-3xl font-bold mb-6 text-blue-800">Nuestros productos</h2>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  <% productos.forEach(producto => { %>
    <div class="bg-white rounded shadow p-4 hover:shadow-lg transition">
      <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>" class="w-full h-48 object-cover rounded mb-3">
      <h3 class="text-xl font-semibold text-blue-800"><%= producto.nombre %></h3>
      <p class="text-gray-600 mb-2"><%= producto.descripcion %></p>
      <p class="text-lg font-bold text-green-700">$<%= producto.precio.toLocaleString() %></p>
      <button class="mt-2 bg-blue-800 text-white px-4 py-2 rounded hover:bg-blue-600 w-full">
        Consultar
      </button>
    </div>
  <% }) %>
</div>
