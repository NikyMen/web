<main class="max-w-screen-xl mx-auto px-4">

  <!-- Carrusel de ofertas -->
  <h2 class="text-2xl font-bold mt-8 mb-4">🔥 Ofertas destacadas</h2>
  <div class="relative">
    <div id="carousel" class="flex overflow-x-auto gap-4 scroll-smooth snap-x snap-mandatory pb-4">
      <% ofertas.forEach((p, i) => { %>
        <div class="min-w-[250px] bg-white rounded shadow p-4 snap-start flex-shrink-0">
          <img src="<%= p.imagen %>" alt="<%= p.nombre %>" class="w-full h-40 object-contain mb-3" />
          <h3 class="font-bold text-gray-900"><%= p.nombre %></h3>
          <p class="text-blue-700 font-semibold">$ <%= p.precio %></p>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Resultados de búsqueda -->
  <h2 class="text-2xl font-bold mt-12 mb-4">🔍 Resultados de tu búsqueda</h2>
  <% if (productos.length === 0) { %>
    <p class="text-center text-gray-600 mt-10">No se encontraron productos.</p>
  <% } else { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-6">
      <% productos.forEach((p) => { %>
        <div class="bg-white rounded shadow p-4">
          <img src="<%= p.imagen %>" alt="<%= p.nombre %>" class="w-full h-40 object-contain mb-3" />
          <h3 class="font-bold text-gray-900"><%= p.nombre %></h3>
          <p class="text-blue-700 font-semibold">$ <%= p.precio %></p>
        </div>
      <% }); %>
    </div>
  <% } %>

</main>
